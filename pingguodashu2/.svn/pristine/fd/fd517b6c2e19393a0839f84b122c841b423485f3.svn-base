html, body, a, i, p, span, div, ul, li{margin: 0; padding: 0}
html, body{
	font-family: "Microsoft YaHei";
	font-size: 62.5%;
	color: #323232;
	min-height: 100%;
	width: 100%;
	margin: 0 auto;
	overflow-x: hidden;
}
body{background-color: #ecedf2;}
a{text-decoration: none; color: #323232;}
.text-right{text-align: right;}
.text-center{text-align: center;}

*{
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.container {
    margin-right: auto; 
    margin-left: auto
}
.row{
	display: block;
}
.row:before, .row:after{
	display: table; content: ""; clear:both;
}
.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12{
    float:left; position: relative;
    min-height: 1px;
    padding-right: 5px; padding-left: 5px;
    vertical-align: middle;
}
.col-12{width:100%}
.col-11{width:91.66666666666666%}
.col-10{width:83.33333333333334%}
.col-9{width:75%}
.col-8{width:66.66666666666666%}
.col-7{width:58.333333333333336%}
.col-6{width:50%}
.col-5{width:41.66666666666667%}
.col-4{width:33.33333333333333%}
.col-3{width:25%}
.col-2{width:16.666666666666664%}
.col-1{width:8.333333333333332%}
.offset-12{margin-left: 100%;}
.offset-11{margin-left: 91.66666667%;}
.offset-10{margin-left: 83.33333333%;}
.offset-9{margin-left: 75%;}
.offset-8{margin-left: 66.66666667%;}
.offset-7{margin-left: 58.33333333%;}
.offset-6{margin-left: 50%;}
.offset-5{margin-left: 41.66666667%;}
.offset-4{margin-left: 33.33333333%;}
.offset-3{margin-left: 25%;}
.offset-2{margin-left: 16.66666667%;}
.offset-1{margin-left: 8.33333333%;}
.offset-0{margin-left: 0;}


.top-bar{
	height: 40px; line-height: 40px; font-size: 2rem;
	background-color: #54CE54; text-indent: 10px;
}

#slider{
	width: 100%; height: 120px; text-align: center; 
}
.ad-card{
	height: 120px;
	line-height: 120px;
	font-size: 4rem;
}

.panel{margin-top: 6px;}
.panel-head{
	font-size: 1.8rem; 
	height: 40px; 
	line-height: 40px;
	background-color: #fff;
	border-bottom: 1px #f5f5f5 solid;
	color: #999;
    padding-left: 10px;
}

.card{background-color: #fff; border-bottom: 1px solid #e9e9e9; padding: 10px;}
.card:nth-of-type(odd){border-left: 1px solid #fff;}
.card:nth-of-type(even){border-left: 1px solid #e9e9e9;}
.card .cover img{width: 90%; max-width: 350px;}
.card .title{color: #333; font-size: 1.4rem;}
.card .price{color: #000; font-weight: bold; font-size: 1.6rem;}

.productBody{

}
.productBody img{
	width: 100%;
}

.buy{
	display: inline-block;
	background-color: red;
	padding: 10px 20px;
	font-size: 2rem;
	border: 1px #ccc solid;
	border-radius: 6px;
	color: #fff;
	margin-top: 10px;
}

.footer{
	margin-top: 10px;
	border-top: 1px #ccc solid;
	border-bottom: 1px #f5f5f5 solid;
	background-color: #f0f0f0;
}
.footer .head{ font-size: 1.6rem; padding-top: 4px; padding-bottom: 4px;}
.footer .body .col-3 p{padding-top: 4px; padding-bottom: 4px;}

